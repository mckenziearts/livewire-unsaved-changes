{
  "name": "mckenziearts/livewire-unsaved-changes",
  "description": "A Livewire component to display an unsaved changes bar with Alpine.js",
  "keywords": [
    "laravel",
    "livewire",
    "alpinejs",
    "form",
    "unsaved-changes"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Arthur Monney",
      "email": "monneylobe@gmail.com"
    }
  ],
  "homepage": "https://github.com/mckenziearts/livewire-unsaved-changes",
  "require": {
    "php": "^8.3",
    "illuminate/contracts": "^11.0|^12.0",
    "illuminate/support": "^11.0|^12.0",
    "illuminate/view": "^11.0|^12.0",
    "livewire/livewire": "^3.0|^4.0",
    "spatie/laravel-package-tools": "^1.19"
  },
  "require-dev": {
    "laravel/pint": "^1.25.0",
    "orchestra/testbench": "^9.0|^10.0",
    "pestphp/pest": "^4.0",
    "pestphp/pest-plugin-laravel": "^4.0",
    "pestphp/pest-plugin-type-coverage": "^4.0",
    "phpstan/phpstan": "^2.1.27",
    "rector/rector": "^2.1.7"
  },
  "autoload": {
    "psr-4": {
      "ShopperLabs\\LivewireUnsavedChanges\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ShopperLabs\\LivewireUnsavedChanges\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "refactor": "rector",
    "test:refactor": "rector --dry-run",
    "lint": "pint",
    "test:lint": "pint --test",
    "test:types": "phpstan analyse --ansi",
    "test:type-coverage": "pest --type-coverage --min=100",
    "test:unit": "pest"
  },
  "extra": {
    "laravel": {
      "providers": [
        "ShopperLabs\\LivewireUnsavedChanges\\Providers\\LivewireUnsavedChangesServiceProvider"
      ]
    }
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
